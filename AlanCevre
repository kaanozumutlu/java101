import java.sql.SQLOutput;
import java.lang.Math;
import java.util.Scanner;

public class Main2 {
    public static void main(String[] args) {
        int a,b,c;
        Scanner input=new Scanner(System.in);
        System.out.println("ilk kenarin uzunlugunu girin:");
        a= input.nextInt();
        
        System.out.println("ikinci kenarin uzunlugunu girin");
        b= input.nextInt();
        System.out.println("ucuncu kenarin uzunlugunu girin");
        c= input.nextInt();
        double u;
        u=(a+b+c)/2;
        System.out.println("ucgenin cevresi:" +2*u);
        double alan;
        alan= Math.sqrt(u*(u-a)*(u-a)*(u-c));
        System.out.println("ucgenin alani"+alan);
    }
}
