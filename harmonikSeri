//harmonik seri: n sayisinin h.s.'si:1+1/2+1/3+1/4+...+1/n
import java.util.Scanner;
public class harmonikSeri {
    public static void main(String[] args) {
        int n;
        double sum=0;
        Scanner inp=new Scanner(System.in);
        System.out.print("n sayisini giriniz:");
        n= inp.nextInt();
        for(int i=1;i<=n;i++){
            sum+=(1/i);
        }
        System.out.println("girilen sayisinin h.s. sonucu="+sum);
    }
}
