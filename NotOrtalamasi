import java.util.Scanner;
public class NotOrtalamasi {
    public static void main(String[] args) {
        //degiskenleri olustur

        int mat, fizik, kimya, turkce, tarih, muzik;

        //Scanner sinifiini tanimladim

        Scanner inp = new Scanner(System.in);
        //kullanicidan degerleri al

        System.out.println("mat notunuzu girin");
        mat=inp.nextInt();

        System.out.println("Fizik notunuz");
        fizik=inp.nextInt();

        System.out.println("kimya notunuz");
        kimya=inp.nextInt();

        System.out.println("turkce not");
        turkce= inp.nextInt();

        System.out.println("tarih notunuz");
        tarih= inp.nextInt();

        System.out.println("muzik notunuz");
        muzik= inp.nextInt();

        double ortalama= (mat + fizik + kimya + turkce + tarih + muzik) /6;
        System.out.println("ortalamaniz"+ortalama);

        boolean kosul1 = ortalama >= 50;
        System.out.println("Durum = " + (kosu5l1==true ? "Geçti" : "Kaldı"));
    }
}
